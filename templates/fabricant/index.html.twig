{% extends 'base.html.twig' %}

{% block title %}Fabricant index{% endblock %}

{% block body %}

{% block header %}{% endblock %}
    <h1 class='my-5'>Liste des Fabricants</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Code</th>
                <th>Fabricant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fabricant in fabricants %}
            <tr>
                <td>{{ fabricant.id }}</td>
                <td>{{ fabricant.nomFabricant }}</td>
                <td>                    
                    <a class='btn btn-success' href="{{ path('app_fabricant_edit', {'id': fabricant.id}) }}"><i class="bi bi-pencil"></i></a>
                    <a class='btn btn-danger' href="{{ path('app_fabricant_show', {'id': fabricant.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fabricant_new') }}"><button class='btn btn-secondary'>Ajouter un fabricant</button></a>
{% endblock %}
