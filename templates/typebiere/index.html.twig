{% extends 'base.html.twig' %}

{% block title %}Type Bière index{% endblock %}

{% block body %}

{% block header %}{% endblock %}
    <h1 class='my-5'>Liste des types de bières</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Code</th>
                <th>Type de Bière</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for typebiere in typebieres %}
            <tr>
                <td>{{ typebiere.id }}</td>
                <td>{{ typebiere.nomTypebiere }}</td>
                <td>                    
                    <a class='btn btn-success' href="{{ path('app_typebiere_edit', {'id': typebiere.id}) }}"><i class="bi bi-pencil"></i></a>
                    <a class='btn btn-danger' href="{{ path('app_typebiere_show', {'id': typebiere.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_typebiere_new') }}"><button class='btn btn-secondary'>Ajouter un type de bière</button></a>
{% endblock %}
