{% extends 'base.html.twig' %}

{% block title %}Couleur index{% endblock %}

{% block body %}

{% block header %}{% endblock %}
    <h1 class='my-5'>Liste des Couleurs</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Code</th>
                <th>Couleur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr>
                <td>{{ couleur.id }}</td>
                <td>{{ couleur.nomCouleur }}</td>
                <td>                    
                    <a class='btn btn-success' href="{{ path('app_couleur_edit', {'id': couleur.id}) }}"><i class="bi bi-pencil"></i></a>
                    <a class='btn btn-danger' href="{{ path('app_couleur_show', {'id': couleur.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_couleur_new') }}"><button class='btn btn-secondary'>Ajouter une couleur</button></a>
{% endblock %}
