{% extends 'base.html.twig' %}

{% block title %}Continent index{% endblock %}

{% block body %}

{% block header %}{% endblock %}
    <h1 class='my-5'>Liste des Continents</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Code</th>
                <th>Continent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for continent in continents %}
            <tr>
                <td>{{ continent.id }}</td>
                <td>{{ continent.nomContinent }}</td>
                <td>                    
                    <a class='btn btn-success' href="{{ path('app_continent_edit', {'id': continent.id}) }}"><i class="bi bi-pencil"></i></a>
                    <a class='btn btn-danger' href="{{ path('app_continent_show', {'id': continent.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_continent_new') }}"><button class='btn btn-secondary'>Ajouter un continent</button></a>
{% endblock %}
