{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1 class='my-5'>Liste des Articles</h1>
    <a class='btn btn-secondary' href="{{ path('app_article_new') }}">Ajouter un article</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Code</th>
                <th>Nom Article</th>
                <th>Couleur</th>
                <th>Type</th>
                <th>Marque</th>
                <th>Prix d'achat</th>
                <th>Volume</th>
                <th>Titrage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.nomArticle }}</td>
                <td>{{ article.couleur ? article.couleur.nomCouleur : 'inconnue' }}</td>
                <td>{{ article.typesId }}</td>
                <td>{{ article.marquesId }}</td>
                <td>{{ article.prixAchat }}</td>
                <td>{{ article.volume }}</td>
                <td>{{ article.titrage }}</td>
                <td>
                    <a class='btn btn-success' href="{{ path('app_article_edit', {'id': article.id}) }}"><i class="bi bi-pencil"></i></a>
                    <a class='btn btn-danger' href="{{ path('app_article_show', {'id': article.id}) }}"><i class="bi bi-trash"></i></a>                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}